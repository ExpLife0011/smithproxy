#! /bin/sh
# /etc/init.d/smithproxy
#

# Some things that run always
# touch /var/lock/smithproxy

# Carry out specific functions when asked to by the system
case "$1" in
  start)
    echo "Starting smithproxy"
    /etc/smithproxy/smithproxy.startup.sh start
    python2 /usr/share/smithproxy/infra/smithdog.py start
    ;;
  stop)
    echo "Stopping smithproxy"
    /etc/smithproxy/smithproxy.startup.sh stop
    python2 /usr/share/smithproxy/infra/smithdog.py stop
    ;;
  status)
    echo "Smithproxy status"
    python2 /usr/share/smithproxy/infra/smithdog.py status
    ;;
  reload)
    echo "Reloading smithproxy policies"
    kill -USR1 `cat /var/run/smithproxy.pid`
    ;;
  *)
    echo "Usage: /etc/init.d/smithproxy {start|stop|status|reload}"
    exit 1
    ;;
esac

exit 0
